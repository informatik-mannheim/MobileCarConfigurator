<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif-light"
        android:text="WEITERES - SETTINGS"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/rims_fragment_color_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:columnCount="2"

            android:rowCount="7">

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:imeOptions="actionDone"
                android:text="Vorname" />

            <EditText
                android:id="@+id/settings_fragment_firstname_txt"
                android:layout_width="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:inputType="textPersonName" />


            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:imeOptions="actionDone"
                android:text="Nachname" />

            <EditText
                android:id="@+id/settings_fragment_lastname_txt"
                android:layout_width="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:inputType="textPersonName" />


            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:imeOptions="actionDone"
                android:text="Geschlecht" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/settings_fragment_male_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Männlich" />

                <RadioButton
                    android:id="@+id/settings_fragment_female_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Weiblich" />

            </RadioGroup>

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:imeOptions="actionDone"
                android:text="Alter" />

            <EditText
                android:id="@+id/settings_fragment_age_txt"
                android:layout_width="50dp"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:inputType="number" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:imeOptions="actionDone"
                android:text="IP" />

            <EditText
                android:id="@+id/settings_fragment_ip_txt"
                android:layout_width="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:inputType="textUri" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:imeOptions="actionDone"
                android:text="Port" />

            <EditText
                android:id="@+id/settings_fragment_port_txt"
                android:layout_width="100dp"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:inputType="number" />

            <Button
                android:id="@+id/settings_fragment_save_btn"
                android:layout_width="100dp"
                android:layout_column="1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"
                android:text="Speichern"
                android:textColor="#FFFFFF" />


        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/settings_fragment_previous_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@color/colorAccent"
            android:text="Zurück"
            android:textColor="#FFFFFF"></Button>

    </LinearLayout>

</LinearLayout>